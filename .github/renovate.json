{
  "extends": ["config:best-practices", ":disableRateLimiting"],
  "enabledManagers": ["github-actions", "pip_requirements", "regex"],
  "assignees": ["pluggero"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": ["alacritty_version:\\s+\"(?<currentValue>[\\d\\.]+)\""],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "alacritty/alacritty",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^requirements\\.yml$", "^meta/main\\.yml$"],
      "matchStrings": [
        "- name: pluggero\\.rustup\\s+version:\\s+(?<currentValue>[\\d\\.]+)",
        "- role: pluggero\\.rustup\\s+version:\\s+(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "pluggero/ansible-role-rustup",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^requirements\\.yml$", "^meta/main\\.yml$"],
      "matchStrings": [
        "- name: pluggero\\.nerdfonts\\s+version:\\s+(?<currentValue>[\\d\\.]+)",
        "- role: pluggero\\.nerdfonts\\s+version:\\s+(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "pluggero/ansible-role-nerdfonts",
      "versioningTemplate": "semver"
    }
  ]
}
